CREATE TABLE Students (
    uniqname          VARCHAR(10) PRIMARY KEY,
    gender            VARCHAR(10),
    name              VARCHAR(100),
    phone_number      VARCHAR(20),
    budget            DECIMAL(10,2),
    preferred_location VARCHAR(100),
    house_type_pref   VARCHAR(50),   -- Apartment, Dorm, House, Townhouse
    room_type_pref    VARCHAR(50),   -- Studio, 1BR, Shared, etc.
    move_in_date      DATE,
    move_out_date     DATE,
    grad_month        INT,
    grad_year         INT,
    password          VARCHAR(20),
    img_url           VARCHAR(100), 
    car               INT
);

CREATE TABLE Housing (
    housing_id      INT PRIMARY KEY,
    contact_student_uniqname VARCHAR(10),
    street_address  VARCHAR(255),
    city            VARCHAR(100),
    state           VARCHAR(50),
    zip_code        VARCHAR(20),
    latitude        DECIMAL(9,6),
    longitude       DECIMAL(9,6),
    monthly_rent    DECIMAL(10,2),
    house_type      VARCHAR(50),   -- Apartment, Dorm, House, Townhouse
    room_type       VARCHAR(50),   -- Studio, 1BR, 2BR, Shared
    gender          VARCHAR(50),   -- All Girls, All Boys, Mixed
    availability_start DATE,
    availability_end   DATE,
    distance_to_campus DECIMAL(5,2),
    wifi_included           BOOLEAN,
    laundry         BOOLEAN,
    parking         BOOLEAN,
    pets_allowed    BOOLEAN,
    furnished       BOOLEAN,
    weed_friendly   BOOLEAN, 
    smoking_friendly BOOLEAN,
    drinking_friendly   BOOLEAN,
    air_conditioning BOOLEAN,
    heating BOOLEAN, 
    utilities_included BOOLEAN,
    FOREIGN KEY (contact_student_uniqname) REFERENCES Students(uniqname)
);

CREATE TABLE HousingImages (
    image_id   INT AUTO_INCREMENT PRIMARY KEY,
    housing_id INT,
    img_url    VARCHAR(255),
    img_order  INT, 
    FOREIGN KEY (housing_id) REFERENCES Housing(housing_id)
);